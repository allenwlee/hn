<div class="container">
  <ul>
    <% if @posts %>
    <li class="post-head"><a href="/post/<%= @post.id%>">
      <%= @post.title %></a><span class="username"> by <%= @post.user.username %></span></li>
    <li class="post-body"><%= @post.body %></li>
    <% else %>
      <%="You have no posts!"  %>
      <a href="/post/create">Create a post here</a>
    <% end %>
  </ul>
</div>

<div class="container">
  <%= erb :_comment %>
</div>
